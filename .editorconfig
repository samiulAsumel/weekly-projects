# EditorConfig Configuration
# Enterprise-Grade Configuration for DevOps Portfolio Projects
# Ensures consistent code formatting across all editors and IDEs
# Supports: Bash, Python, YAML, JSON, Docker, Terraform, Ansible, Markdown

# =============================================================================
# EDITORCONFIG ROOT FILE
# =============================================================================
# This is the root-most EditorConfig file
root = true

# =============================================================================
# DEFAULT CONFIGURATION
# =============================================================================
# Default settings for all files
[*]
# Character encoding
charset = utf-8
# End of line characters
end_of_line = lf
# Insert final newline
insert_final_newline = true
# Remove trailing whitespace
trim_trailing_whitespace = true
# Indentation style
indent_style = space
# Indentation size
indent_size = 2

# =============================================================================
# FILE TYPE SPECIFIC CONFIGURATIONS
# =============================================================================

# Bash/Shell Scripts
[*.{sh,bash,zsh,fish,ksh}]
indent_style = space
indent_size = 2
max_line_length = 120
tab_width = 2

# Python Files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88
tab_width = 4

# YAML Files
[*.{yml,yaml}]
indent_style = space
indent_size = 2
max_line_length = 120
tab_width = 2

# JSON Files
[*.json]
indent_style = space
indent_size = 2
max_line_length = 120
tab_width = 2

# Markdown Files
[*.md]
indent_style = space
indent_size = 2
max_line_length = 120
tab_width = 2
trim_trailing_whitespace = false

# Docker Files
[Dockerfile*]
indent_style = space
indent_size = 2
max_line_length = 120
tab_width = 2

# Terraform Files
[*.{tf,tfvars}]
indent_style = space
indent_size = 2
max_line_length = 120
tab_width = 2

# Ansible Files
[*.{ansible,playbook}]
