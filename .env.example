# =============================================================================

# Project Name
PROJECT_NAME=devops-portfolio
PROJECT_VERSION=1.0.0
PROJECT_DESCRIPTION=DevOps Portfolio Projects Repository

# Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info

